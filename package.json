{
  "name": "sqerge",
  "version": "1.0.0",
  "description": "A forward only PostgreSQL migration tool.",
  "keywords": [
    "postgres",
    "postgresql",
    "sql",
    "migrate",
    "migration"
  ],
  "homepage": "https://github.com/eezing/sqerge#readme",
  "bugs": {
    "url": "https://github.com/eezing/sqerge/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eezing/sqerge.git"
  },
  "license": "ISC",
  "author": "Eric Zingeler <eezing@gmail.com>",
  "main": "dist/index.js",
  "bin": "bin.js",
  "scripts": {
    "build": "rm -rf dist && tsc --build",
    "dev": "tsc -w",
    "dev:postgres": "node ./scripts/dev-postgres.js",
    "prepare": "husky install",
    "test": "npm run test:prettier && npm run test:jest",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:prettier": "prettier -c ."
  },
  "prettier": {
    "bracketSpacing": true,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.test.ts"
    ]
  },
  "dependencies": {
    "postgres": "^3.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/node": "^16.11.59",
    "husky": "^8.0.0",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
