{
  "name": "sqerge",
  "version": "2.0.2",
  "description": "A forward only PostgreSQL migration tool.",
  "keywords": [
    "postgres",
    "postgresql",
    "sql",
    "migrate",
    "migration",
    "schema"
  ],
  "homepage": "https://github.com/eezing/sqerge#readme",
  "bugs": {
    "url": "https://github.com/eezing/sqerge/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eezing/sqerge.git"
  },
  "license": "ISC",
  "author": "Eric Zingeler <eezing@gmail.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "bin.js",
  "scripts": {
    "build": "rm -rf dist && tsc --build",
    "dev": "tsc -w",
    "dev:postgres": "PGHOST=localhost PGPORT=5438 PGUSER=jonathan PGPASSWORD=iliketurtles PGDATABASE=dev NAME=sqerge RESET=true TAG=14 pglocal",
    "test": "npm run test:prettier && npm run test:jest",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:prettier": "prettier -c .",
    "prepare": "husky"
  },
  "prettier": {
    "bracketSpacing": true,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/__tests__/*.test.ts"
    ]
  },
  "devDependencies": {
    "@eezing/pglocal": "^1.0.8",
    "@types/jest": "^29.1.2",
    "@types/node": "^20.12.12",
    "husky": "^9.0.11",
    "jest": "^29.1.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.0.3",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "postgres": "^3.x"
  },
  "peerDependenciesMeta": {
    "postgres": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=14 <=18"
  }
}
