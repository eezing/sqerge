{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2020",
    "module": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true
  },
  "exclude": ["node_modules", "**/__tests__", "dist"]
}
